// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_servers": {
    "opencode": {
      "default_model": "google/gemini-3-flash-preview",
      "type": "extension",
      "default_mode": "gentleman",
    },
  },
  "inlay_hints": {
    "enabled": true,
  },
  "git_panel": {
    "tree_view": true,
    "sort_by_path": true,
  },
  "agent": {
    "always_allow_tool_actions": true,
    "dock": "left",
    "default_profile": "write",
    "default_model": {
      "provider": "openrouter",
      "model": "mistralai/devstral-2512:free",
    },
    "model_parameters": [],
  },
  "outline_panel": {
    "dock": "right",
  },

  "title_bar": {
    "show_branch_icon": false,
  },
  "status_bar": {
    "active_language_button": true,
  },
  "project_panel": {
    "dock": "right",
    "button": false,
  },
  "tab_bar": {
    "show": false,
  },
  "ui_font_family": "Dank Mono",
  "buffer_font_family": "Dank Mono",
  "terminal": {
    "shell": "system",
  },
  "icon_theme": {
    "mode": "dark",
    "light": "Zed (Default)",
    "dark": "Catppuccin Mocha",
  },
  "base_keymap": "JetBrains",
  "ui_font_size": 20,
  "buffer_font_size": 24.0,
  "theme": {
    "mode": "dark",
    "light": "One Dark",
    "dark": "Catppuccin Mocha",
  },

  "file_types": {
    "Django": ["html"],
    "PHP": ["*.php"],
    "Blade": ["*.blade.php"],
  },

  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "./vendor/bin/pint",
          "arguments": ["-"],
        },
      },
    },
    "Python": {
      "language_servers": [
        // Disable basedpyright and enable Ty, and otherwise
        // use the default configuration.
        "ty",
        "!basedpyright",
      ],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "uvx",
          "arguments": [
            "ruff",
            "check",
            "--select",
            "I",
            "--fix",
            "--stdin-filename",
            "{buffer_path}",
            "-",
          ],
        },
      },
    },
    "Django": {
      "language_servers": ["django-language-server"],
      "tab_size": 4,
    },

    "Vue.js": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "TypeScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },

    "CSS": {
      "language_servers": [
        "tailwindcss-language-server",
        "!vscode-css-language-server",
      ],
    },
  },

  "lsp": {
    "intelephense": {
      "initialization_options": {
        "licenceKey": "003MKOZTXPXLPLK",
      },
    },

    "basedpyright": {
      "initialization_options": {
        "python": {
          "analysis": {
            "djangoSettingsModule": "config.settings",
          },
        },
      },

      "settings": {
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false,
          },
        },
      },
    },

    "tailwindcss-language-server": {
      "settings": {
        "tailwindCSS": {
          "emmetCompletions": true,
        },
        "classFunctions": ["cva", "cx"],
        "experimental": {
          "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"],
        },
      },
    },
  },
}
